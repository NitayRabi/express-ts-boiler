{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "target": "es6",
    "lib": ["es6", "dom","ES2017"],
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "*": [
        "./node_modules/*"
      ]
    }
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}